mysql> SELECT e.emp_id, e.emp_name, d.dept_name
    -> FROM employee e
    -> INNER JOIN paydetails pd ON e.emp_id = pd.emp_id
    -> INNER JOIN department d ON pd.dept_id = d.dept_id;
