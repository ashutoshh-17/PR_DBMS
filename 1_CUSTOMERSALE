mysql> SELECT c.cust_id, c.cust_name, COUNT(s.item_id) AS total_products_bought
    -> FROM Customer c
    -> LEFT JOIN Sale s ON c.cust_id = s.cust_id
    -> GROUP BY c.cust_id, c.cust_name;
