mysql> DELIMITER //
mysql>
mysql> CREATE TRIGGER check_salary_trigger
    -> BEFORE INSERT ON paydetails
    -> FOR EACH ROW
    -> BEGIN
    ->     IF NOT check_salary() THEN
    ->         SIGNAL SQLSTATE '45000'
    ->         SET MESSAGE_TEXT = 'Salary cannot be less than Rs. 20000';
    ->     END IF;
    -> END;
    -> //
Query OK, 0 rows affected (0.01 sec)

mysql>
mysql> DELIMITER ;
